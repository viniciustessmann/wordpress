.wpme_mainform
  color white
  width 70%
  margin auto
  text-align center
  font-size 1.200rem
  vertical-align middle
  form
    display inline-block
    width 100%

.wpme_inputtext
  border none
  box-shadow none
  border solid 1px #ffffff
  background-color rgba(255,255,255,.05)
  margin 0
  color #DDDDDD
  width 100%
  min-height 150px
  resize none

.wpme_body_init
  background-image url('../../assets/img/backhome.png')
  background-attachment fixed
  background-repeat no-repeat
  background-size cover
  margin 20px 0
  height 80vh
  display flex
  padding 10px
  h1, h2
    color #ffffff
    text-align center
  p
    padding 1px
    line-height 1
  a
    color $mandy
    text-decoration none
    &:hover
      text-decoration underline

.absolute
  position absolute
  z-index 100
  max-width 350px
