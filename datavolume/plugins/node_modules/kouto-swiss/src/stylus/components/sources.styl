.sources
    display flex
    justify-content center
    align-items center
    &__link
        display inline-flex
        align-items center
        padding-left 1rem
        background white
        border .3rem solid black
        border-radius 1rem
        text-decoration none
    &__icon
        size 3.2rem auto
        margin-right 1rem
    &__text
        display flex
        flex-direction column
        justify-content center
        align-items center
        padding .5rem 1.5rem
        background black
        font-size 1.4rem
        color white
        text-align center
        strong
            display block
            font-size 1.6rem
